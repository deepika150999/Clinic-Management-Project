@model IEnumerable<TheStoneClinic.Models.AppointmentDetail>

@{
    ViewData["Title"] = "AppointmentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AppointmentDetails</h1>

<p>
    <a asp-action="Book">Add New Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDuration)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDuration)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
            <td>
                    <a asp-action="Cancel" asp-route-id="@item.AppointmentNumber">Cancel Appointment</a>
            </td>
        </tr>
}
    </tbody>
</table>
